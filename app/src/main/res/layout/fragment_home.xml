<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.all_fragments.HomeFragment"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/cardimg"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                custom:pager_animation="Accordion"
                custom:auto_cycle="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                custom:indicator_visibility="visible"
                custom:pager_animation_span="1100"
                android:layout_height="200dp"/>

            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                custom:selected_color="#0095BF"
                custom:unselected_color="#55333333"
                custom:selected_drawable="@mipmap/ic_launcher"
                custom:shape="oval"
                custom:selected_padding_left="5dp"
                custom:selected_padding_right="5dp"
                custom:unselected_padding_left="5dp"
                custom:unselected_padding_right="5dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                custom:selected_width="6dp"
                custom:selected_height="6dp"
                custom:unselected_width="6dp"
                custom:unselected_height="6dp"
                android:layout_marginBottom="20dp"
                />
            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator2"
                style="@style/AndroidImageSlider_Corner_Oval_Orange"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardimg"
            android:layout_marginTop="4dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/carddoc"
                    android:layout_width="200dp"
                    android:layout_height="220dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/consultant" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="Find doctors Near By"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins"
                            android:maxLines="2"
                            android:text="Book video or clicnic appointment" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/lustria"
                            android:text="Find Doctors"
                            android:textStyle="bold"
                            android:maxLines="4"
                            android:ellipsize="end"

                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="200dp"
                    android:layout_height="220dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/lab_test" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="Diagnostic Test Lab"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins"
                            android:maxLines="2"
                            android:text="Get lab test at home" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="26dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/lustria"
                            android:text="Book Now"
                            android:textStyle="bold"
                            android:maxLines="4"
                            android:ellipsize="end"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="200dp"
                    android:layout_height="220dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                            <ImageView
                                android:scaleType="centerCrop"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/medicinedelivery" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/poppins"
                            android:text="Order Medicines"
                            android:textColor="@android:color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/poppins"
                            android:maxLines="2"
                            android:text="Get medicines delivery at your home" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/lustria"
                            android:text="Purchase Now "
                            android:textStyle="bold"
                            android:maxLines="4"
                            android:ellipsize="end"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="10dp"
            android:layout_below="@id/rel1"
            app:cardBackgroundColor="#EEEEF4">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="COVID-19"
                    android:background="@drawable/backcovid"
                    android:textSize="12sp"
                    android:padding="6dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/covid"
                    android:textColor="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's get ready to \nFIGHT Coronavirus \ntogether!"
                    android:layout_below="@id/covid"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:id="@+id/ready"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find list of COVID-19"
                    android:layout_below="@id/ready"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins"
                    android:textStyle="italic"
                    android:id="@+id/find"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="testing centers in India"
                    android:layout_below="@id/find"
                    android:layout_marginLeft="20dp"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins"
                    android:textStyle="italic"
                    android:id="@+id/find1"/>
                <Button
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:layout_below="@id/find1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_button"
                    android:text="Read More"
                    android:textAllCaps="false"
                    android:textSize="10dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:id="@+id/btn_readmore"
                    android:layout_marginBottom="20dp"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card3"
            android:text="Doctors in top specialities"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/doctor"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/doctor"
            android:layout_margin="10dp"
            android:id="@+id/hori"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/hrcard"
                    android:layout_marginBottom="6dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:id="@+id/imgden"
                            android:src="@drawable/tooth"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/imgden"
                            android:background="#919191"
                            android:id="@+id/view"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view"
                            android:layout_marginTop="10dp"
                            android:text="Dentist"
                            android:textSize="14sp"
                            android:id="@+id/splst"
                            android:fontFamily="@font/poppins"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="20dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginBottom="6dp"
                    android:id="@+id/hrcard1"
                    android:layout_toEndOf="@id/hrcard"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:id="@+id/imgden1"
                            android:src="@drawable/ayurvedic"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/imgden1"
                            android:background="#919191"
                            android:id="@+id/view1"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view1"
                            android:layout_marginTop="10dp"
                            android:text="Ayurveda"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="20dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/hrcard2"
                    android:layout_marginBottom="6dp"
                    android:layout_toEndOf="@id/hrcard1"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:id="@+id/imgden2"
                            android:src="@drawable/stethoscope"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/imgden2"
                            android:background="#919191"
                            android:id="@+id/view2"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view2"
                            android:layout_marginTop="10dp"
                            android:text="homoeopath"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="20dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginBottom="6dp"
                    android:id="@+id/hrcard3"
                    android:layout_toEndOf="@id/hrcard2"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:id="@+id/imgden3"
                            android:src="@drawable/facemask"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/imgden3"
                            android:background="#919191"
                            android:id="@+id/view3"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view3"
                            android:layout_marginTop="10dp"
                            android:text="General Surgeon"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="20dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginBottom="6dp"
                    android:id="@+id/hrcard4"
                    android:layout_toEndOf="@id/hrcard3"
                    android:layout_marginLeft="10dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:id="@+id/imgden4"
                            android:src="@drawable/peg"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_below="@id/imgden4"
                            android:background="#919191"
                            android:id="@+id/view4"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view4"
                            android:layout_marginTop="10dp"
                            android:text="Gynecologist/Obstetrician"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins"
                            android:textColor="@android:color/black"
                            android:layout_marginLeft="20dp"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hori"
            android:text="View All"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/all"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="275dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/all"
            android:text="Letest Offer"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/offer"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardoffer"
            android:layout_below="@id/offer"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">
            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/viewPager"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardoffer"
            android:text="Medecines"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="10dp"
            android:id="@+id/medecine"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardmed"
            android:layout_below="@id/medecine"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp">
            <androidx.viewpager.widget.ViewPager
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/medecineViewPager"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardmed"
            android:text="Health Tips"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins"
            android:layout_marginLeft="10dp"
            android:id="@+id/healthtips"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/healthtips"
            android:id="@+id/horitwo"
            android:scrollbars="none">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="6dp"
                    android:id="@+id/cardhealth1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/healthtipsone"
                            android:id="@+id/imgHealth1"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@android:color/holo_blue_light"
                            android:id="@+id/v1"
                            android:layout_below="@id/imgHealth1"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_below="@id/v1"
                            android:textSize="13sp"
                            android:maxLines="4"
                            android:ellipsize="end"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/poppins"
                            android:text="@string/healthtip"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="250dp"
                    android:layout_height="200dp"
                    android:id="@+id/cardhealth2"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="7dp"
                    android:layout_toEndOf="@id/cardhealth1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="250dp"
                            android:layout_height="100dp"
                            android:src="@drawable/healthtiptwo"
                            android:id="@+id/imgHealth2"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@android:color/holo_blue_light"
                            android:id="@+id/v2"
                            android:layout_below="@id/imgHealth2"
                            android:layout_marginTop="5dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
