<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ladydoc"
                android:layout_margin="10dp"
                android:id="@+id/imgDoc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgDoc"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:text="Appointment with "
                android:fontFamily="@font/poppins"
                android:id="@+id/txt_appointment"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/txt_appointment"
                android:layout_marginTop="10dp"
                android:text="Dr.Akanksha Gupta"
                android:textSize="13sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/poppins"
                android:id="@+id/txt_AppointDoctor"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgDoc"
                android:textSize="13sp"
                android:layout_below="@id/txt_AppointDoctor"
                android:text="Shubham Hospital,Jankipuram"
                android:fontFamily="@font/poppins"
                android:id="@+id/txt_location"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgDoc"
                android:layout_below="@id/txt_location"
                android:textSize="12sp"
                android:text="18 May 2020, 11:00 AM"
                android:fontFamily="@font/poppins"
                android:id="@+id/txt_DateTime"
                android:layout_marginBottom="7dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>