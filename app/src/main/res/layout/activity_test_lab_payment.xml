<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".testLabPayment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0078d7"
        android:id="@+id/rel">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_arrow_back_black_24dp"
            android:layout_margin="12dp"
            android:id="@+id/back_arrow"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payments"
            android:layout_toEndOf="@id/back_arrow"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:fontFamily="@font/poppins"
            android:paddingTop="13dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wallet"
                        android:layout_margin="10dp"
                        android:id="@+id/wallet"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/wallet"
                        android:id="@+id/btn_amz"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_below="@id/wallet"
                        android:layout_toEndOf="@id/btn_amz"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/amazonpay"
                        android:layout_marginTop="-20dp"
                        android:layout_marginBottom="6dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UPI"
                        android:layout_margin="10dp"
                        android:id="@+id/upi"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/upi"
                        android:id="@+id/btn_gpay"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/upi"
                        android:layout_toEndOf="@id/btn_gpay"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/googlepay"
                        android:layout_marginBottom="6dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/btn_gpay"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/view"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view"
                        android:id="@+id/btn_paytm"
                        android:layout_marginBottom="6dp"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/view"
                        android:layout_toEndOf="@id/btn_paytm"
                        android:layout_marginLeft="30dp"
                        android:background="@drawable/paytm"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Debit/ Credit Card"
                        android:layout_margin="10dp"
                        android:id="@+id/debit"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/debit"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="20dp"
                        android:text="    Add New Card"
                        android:textColor="#07F410"
                        android:textSize="15sp"
                        android:drawableLeft="@drawable/ic_baseline_add_circle_outline_24"
                        android:layout_marginBottom="30dp"
                        android:id="@+id/add_newCard"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="6dp"
                android:layout_margin="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Net Banking"
                        android:layout_margin="10dp"
                        android:id="@+id/netBank"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/netBank"
                        android:id="@+id/btn_sbi"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/netBank"
                        android:layout_toEndOf="@id/btn_sbi"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/sbibank"
                        android:layout_marginTop="-7dp"
                        android:layout_marginBottom="6dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/btn_sbi"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/view2"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:id="@+id/btn_hdfc"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="20dp"
                        android:layout_below="@id/view2"
                        android:layout_toEndOf="@id/btn_hdfc"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="23dp"
                        android:background="@drawable/hdfcbank"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/btn_hdfc"
                        android:background="@android:color/darker_gray"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/view3"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view3"
                        android:id="@+id/btn_ici"/>
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/view3"
                        android:layout_toEndOf="@id/btn_ici"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/icibank"
                        android:layout_marginBottom="10dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 1199.0 /-"
                    android:layout_margin="10dp"
                    android:textSize="15dp"
                    android:textColor="#3B049E"/>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="Pay Now"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:background="@drawable/backbutton"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="5dp"/>

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>