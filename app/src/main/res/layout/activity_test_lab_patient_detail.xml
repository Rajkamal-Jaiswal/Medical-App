<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".testLabPatientDetail">

  <LinearLayout
      android:id="@+id/rel_back"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="@color/colorPrimaryDark">

    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:background="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/back_arrow"
        android:text="Confirm Lab Test"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />
  </LinearLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          app:cardCornerRadius="7dp"
          app:cardElevation="5sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Add Patient"
              android:textSize="15sp"
              android:fontFamily="@font/poppins"
              android:textColor="@android:color/black"
              android:layout_margin="10dp"/>
          <HorizontalScrollView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scrollbars="none"
              android:layout_marginBottom="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="My Self"
                  android:padding="10dp"
                  android:gravity="center"
                  android:layout_marginLeft="10dp"
                  android:textColor="@android:color/black"
                  android:textSize="12sp"
                  android:background="@drawable/backtestlabpatintdetail"
                  android:id="@+id/mySelf"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Wife"
                  android:padding="10dp"
                  android:gravity="center"
                  android:layout_marginLeft="10dp"
                  android:textColor="@android:color/black"
                  android:textSize="12sp"
                  android:background="@drawable/backtestlabpatintdetail"
                  android:id="@+id/wife"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Father"
                  android:padding="10dp"
                  android:gravity="center"
                  android:layout_marginLeft="10dp"
                  android:textColor="@android:color/black"
                  android:textSize="12sp"
                  android:background="@drawable/backtestlabpatintdetail"
                  android:id="@+id/father"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Mother"
                  android:padding="10dp"
                  android:gravity="center"
                  android:layout_marginLeft="10dp"
                  android:textColor="@android:color/black"
                  android:textSize="12sp"
                  android:background="@drawable/backtestlabpatintdetail"
                  android:id="@+id/mother"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Daughter"
                  android:padding="10dp"
                  android:layout_marginLeft="10dp"
                  android:gravity="center"
                  android:textColor="@android:color/black"
                  android:textSize="12sp"
                  android:background="@drawable/backtestlabpatintdetail"
                  android:id="@+id/daughter"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Son"
                  android:padding="10dp"
                  android:gravity="center"
                  android:textColor="@android:color/black"
                  android:textSize="12sp"
                  android:layout_marginLeft="10dp"
                  android:background="@drawable/backtestlabpatintdetail"
                  android:id="@+id/son"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Grand Father"
                  android:padding="10dp"
                  android:layout_marginLeft="10dp"
                  android:gravity="center"
                  android:textColor="@android:color/black"
                  android:textSize="12sp"
                  android:background="@drawable/backtestlabpatintdetail"
                  android:id="@+id/gFather"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Grand Mother"
                  android:padding="10dp"
                  android:gravity="center"
                  android:textColor="@android:color/black"
                  android:textSize="12sp"
                  android:layout_marginLeft="10dp"
                  android:background="@drawable/backtestlabpatintdetail"
                  android:id="@+id/gMOther"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Others"
                  android:padding="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginRight="10dp"
                  android:gravity="center"
                  android:textColor="@android:color/black"
                  android:textSize="12sp"
                  android:background="@drawable/backtestlabpatintdetail"
                  android:id="@+id/others"/>

            </LinearLayout>
          </HorizontalScrollView>

        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          app:cardElevation="5sp"
          app:cardCornerRadius="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Full Name"
              android:textSize="12sp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/et_patientName"
              android:textSize="14dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:hint="Rajesh Prajapati"
              android:padding="10dp"
              android:background="@drawable/backtestlabpatintdetail"/>

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/age"
                android:text="Age"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_age"
                android:layout_below="@id/age"
                android:layout_marginTop="6dp"
                android:hint="21"
                android:textSize="14dp"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/backtestlabpatintdetail"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_gender"
                android:layout_toEndOf="@id/age"
                android:layout_marginLeft="70dp"
                android:text="Gender"
                android:textSize="12sp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_male"
                android:text="Male"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_below="@id/age"
                android:layout_toEndOf="@id/et_age"
                android:layout_marginLeft="50dp"
                android:padding="10dp"
                android:background="@drawable/backtestlabpatintdetail"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_female"
                android:text="Female"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_below="@id/age"
                android:layout_toEndOf="@id/tv_male"
                android:layout_marginLeft="20dp"
                android:padding="10dp"
                android:background="@drawable/backtestlabpatintdetail"/>

          </RelativeLayout>

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Email Id"
              android:textSize="12sp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/et_emailId"
              android:textSize="14dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:hint="aligabeth@gmail.com"
              android:inputType="textEmailAddress"
              android:padding="10dp"
              android:background="@drawable/backtestlabpatintdetail"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Phone Number"
              android:textSize="12sp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/et_phoneNumber"
              android:textSize="14dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:hint="7055104350"
              android:inputType="phone"
              android:padding="10dp"
              android:background="@drawable/backtestlabpatintdetail"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Pic Address"
              android:textSize="12sp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/et_picAddress"
              android:textSize="14dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:hint="Basant Bihar Colony Lucknow"
              android:padding="10dp"
              android:background="@drawable/backtestlabpatintdetail"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="Pincode"
              android:textSize="12sp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/et_pinCode"
              android:textSize="14dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:inputType="number"
              android:hint="273303"
              android:padding="10dp"
              android:background="@drawable/backtestlabpatintdetail"/>
          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="City"
              android:textSize="12sp"
              android:textColor="@android:color/black"
              android:layout_marginLeft="10dp"
              android:layout_marginTop="10dp"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/et_city"
              android:textSize="14dp"
              android:layout_marginTop="5dp"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginBottom="10dp"
              android:hint="Gorakhpur"
              android:padding="10dp"
              android:background="@drawable/backtestlabpatintdetail"/>

        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <Button
          android:layout_width="match_parent"
          android:layout_height="42dp"
          android:layout_margin="15dp"
          android:text="Save"
          android:textAllCaps="false"
          android:background="@drawable/backbutton"
          android:textColor="@android:color/white"
          android:id="@+id/btn_save"/>
    </LinearLayout>
  </ScrollView>

</LinearLayout>