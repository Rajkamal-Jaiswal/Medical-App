<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ladydoc"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:id="@+id/imgDocProfile"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dr. Akanksha Gupta"
                android:layout_toEndOf="@id/imgDocProfile"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:fontFamily="@font/poppins"
                android:textColor="@android:color/black"
                android:id="@+id/docName"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gynecologist/Obstetriction specialist  Shubham Hospital"
                android:layout_toEndOf="@id/imgDocProfile"
                android:layout_below="@id/docName"
                android:layout_marginTop="-4dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:id="@+id/address"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@id/imgDocProfile"
                android:layout_below="@id/address"
                android:background="@drawable/backbutton"
                android:text="Book"
                android:textSize="8dp"
                android:textColor="@color/white"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>