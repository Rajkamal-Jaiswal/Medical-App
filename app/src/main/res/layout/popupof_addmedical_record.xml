<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Record For"
        android:padding="20dp"
        android:background="#0078d7"
        android:textColor="@android:color/white"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ececec">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#ececec"
            android:hint="Add family members"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:id="@+id/et_familyMember"/>

        <Button
            android:id="@+id/imgButton_addFamily"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/et_familyMember"
            android:background="@drawable/add"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rajesh Prajapati(You)"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:padding="10dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_familyMember"
        android:textSize="14sp"
        android:fontFamily="@font/poppins"
        android:padding="10dp"
        android:textColor="@android:color/black"/>

</LinearLayout>