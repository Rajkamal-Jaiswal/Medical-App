<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel_container">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rajesh Prajapati"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number"
        android:layout_below="@id/txt_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_contact"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Number"
        android:layout_below="@id/name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/contact"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Id"
        android:layout_below="@id/txt_contact"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add EmailID"
        android:layout_below="@id/contact"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:layout_below="@id/txt_email"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_gender"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Gender"
        android:layout_below="@id/email"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/gender"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Of birth"
        android:layout_below="@id/txt_gender"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_DOB"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add DOB"
        android:layout_below="@id/gender"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/dob"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blood Group"
        android:layout_below="@id/txt_DOB"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_bloodg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Blood Group"
        android:layout_below="@id/dob"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/blood"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marital Status"
        android:layout_below="@id/txt_bloodg"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Status"
        android:layout_below="@id/blood"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/status"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height"
        android:layout_below="@id/txt_status"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_height"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add height"
        android:layout_below="@id/status"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/height"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:layout_below="@id/txt_height"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_weight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add weight"
        android:layout_below="@id/height"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/weight"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Contact"
        android:layout_below="@id/txt_weight"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_emrContact"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Emergency Contact"
        android:layout_below="@id/weight"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/emrcontact"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_below="@id/txt_emrContact"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/txt_location"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add location"
        android:layout_below="@id/emrcontact"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/location"/>

</RelativeLayout>